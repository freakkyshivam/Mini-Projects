{
  "compilerOptions": {
     "target": "ES2022",
     "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node"],
    "ignoreDeprecations": "6.0"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
